body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #f5f5f5;
      font-family: sans-serif;
    }
    .calculator {
      background: white;
      border-radius: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      padding: 20px;
    }
    .display {
      width: 220px;
      height: 50px;
      background: #eee;
      border-radius: 10px;
      text-align: right;
      padding: 10px;
      font-size: 2em;
      margin-bottom: 10px;
      overflow: hidden;
    }
    button {
      width: 50px;
      height: 50px;
      margin: 5px;
      font-size: 1.2em;
      border: none;
      border-radius: 10px;
      background: #f0f0f0;
      cursor: pointer;
    }
    button:hover {
      background: #ddd;
    }
    .equals {
      background: #ffa500;
      color: white;
    }